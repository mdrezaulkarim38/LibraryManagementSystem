@model LibraryManagementSystem.Models.Book
@{
    var categories = ViewData["Categories"] as IEnumerable<LibraryManagementSystem.Models.Category>;
}

<h3>Create a New Book</h3>
<form asp-action="CreateBook" method="post">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter book title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Author" class="control-label">Author</label>
        <input asp-for="Author" class="form-control" placeholder="Enter author name" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <textarea asp-for="Description" class="form-control" placeholder="Enter book description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Select Category</label>
        <select id="categorySelect" class="form-control" onchange="toggleCategoryInput()">
            <option value="">Select a category</option>
            @foreach (var category in categories!)
            {
                <option value="@category.CategoryId">@category.Name</option>
            }
            <option value="new">Add New Category</option> <!-- Option to add new category -->
        </select>
    </div>

    <div class="form-group" id="newCategoryDiv" style="display: none;">
        <label for="NewCategory" class="control-label">New Category</label>
        <input type="text" id="NewCategory" class="form-control" placeholder="Enter new category" name="newCategory" />
    </div>

    <div class="form-group">
        <label asp-for="TotalCopies" class="control-label">Total Copies</label>
        <input asp-for="TotalCopies" type="number" class="form-control" placeholder="Enter total copies" />
        <span asp-validation-for="TotalCopies" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PublishedDate" class="control-label">Published Date</label>
        <input asp-for="PublishedDate" type="date" class="form-control" />
        <span asp-validation-for="PublishedDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create Book</button>
</form>

<script>
    function toggleCategoryInput() {
        const select = document.getElementById('categorySelect');
        const newCategoryDiv = document.getElementById('newCategoryDiv');
        // Show new category input if "Add New Category" is selected
        newCategoryDiv.style.display = select.value === "new" ? 'block' : 'none';
    }
</script>
