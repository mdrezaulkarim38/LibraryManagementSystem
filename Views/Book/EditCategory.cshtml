@model LibraryManagementSystem.Models.Category

<h2>Edit Category</h2>

<form asp-action="EditCategory" method="post">
    <input type="hidden" asp-for="CategoryId" /> <!-- Add this hidden input for the CategoryId -->

    <div class="form-group">
        <label asp-for="Name" class="control-label">Category Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
    <a asp-action="CategoryList" class="btn btn-secondary mt-3">Cancel</a>
</form>
